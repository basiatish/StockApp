<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stocks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">#B4B4B4</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorPrimaryContainer">@color/orange</item>
        <item name="colorSurface">#B4B4B4</item>
        <item name="colorOnSurface">#2E4052</item>
        <item name="colorOnSurfaceVariant">@color/green</item>
        <item name="colorOnSecondaryContainer">#2E4052</item>
    </style>


    <style name="FloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="CancelBtn" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="TextApp" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomChipButton" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipMinTouchTargetSize">2dp</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">#2C2C2C</item>
        <item name="shapeAppearanceOverlay">@style/SheetCorners</item>
    </style>

    <style name="SheetCorners" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="ImageLogo" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="ChartButton" parent="">
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:background">@drawable/chart_button_transition</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ImageLogo.Background" parent="">
        <item name="android:background">#59FFFFFF</item>
    </style>

</resources>