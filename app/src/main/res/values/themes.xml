<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stocks" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FCA311</item>
        <item name="colorPrimaryVariant">#EFEFEF</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorPrimaryContainer">@color/orange</item>
        <item name="colorSurface">#B4B4B4</item>
        <item name="colorOnSurface">#B4B4B4</item>
        <item name="colorOnSurfaceVariant">@color/green</item>
        <item name="colorOnSecondaryContainer">#2E4052</item>
    </style>


    <style name="ImageLogo" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="FloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="CancelBtn" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="TextApp" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StatisticText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Divider" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/textview_background_container</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="CustomChipButton" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipMinTouchTargetSize">2dp</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomFragmentChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipMinTouchTargetSize">2dp</item>
        <item name="minHeight">25dp</item>
        <item name="textStartPadding">5dp</item>
        <item name="textEndPadding">5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="chipMinHeight">35dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>